<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2>User info</h2>
<table class="table">
  <tbody>
      <tr>
        <th><%= attachment_image_tag user, :profile_image, size: "100x100", class: "img-rounded pull-left" %></th>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
  </tbody>
</table>
<div class="row">
  <% if user.id == current_user.id %>
    <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  <% end %>
</div>

<h2>New book</h2>

<%= form_for (book) do |f| %>
  <div class="field row">

    <% if book.errors.any? %>
      <div id="error_explanation" class="alert aleart-danger">
      <h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>