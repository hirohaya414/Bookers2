<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">

      <%= render 'users/side', user: @user, book: @book %>

      </div>
      <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, size: "50x50", class: "img-rounded pull-left", fallback: "no_image.jpg" %></td>
              <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>