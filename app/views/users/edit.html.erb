  <div class="body">
    <div class="container">
      <p id="notice"></p>
        <div class="row">
          <div class="col-xs-3">

		    <h2>User info</h2>

            <%= form_for @user do |f| %>
              <table class="table">
                <tbody>
                  <% if @user.errors.any? %>
                    <div id="error_explanation" class="alert aleart-danger">
                    <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
                      <ul>
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <tr>
                    <th>Name <%= f.text_field :name %></th>
                  </tr>
                  <tr>
                  	<th>Image <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %></th>
                  </tr>
                  <tr>
                    <th>Introduction <%= f.text_area :introduction %></th>
                  </tr>
                  <tr>
                    <th><%= f.submit 'Update User' %></th>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
    </div>
  </div>
