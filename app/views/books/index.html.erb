  <div class="body">
    <div class="container">
      <p id="notice"></p>
        <div class="row">
          <div class="col-xs-3">

          <%= render 'users/side', user: current_user, book: Book.new %>

          </div>
            <div class="col-xs-9">
            <h2>Books</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                  </tr>
                </thead>
                <tbody>
                  <% @books.each do |book| %>
                  <tr>
                    <td></td>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

        </div>
    </div>
  </div>