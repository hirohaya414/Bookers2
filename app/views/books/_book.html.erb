<td>
  <%= link_to user_path(book.user) do %>
    <%= attachment_image_tag book.user, :profile_image, size: "50x50", class: "img-rounded pull-left", fallback: "no_image.jpg" %><br>
    <%= book.user.name %>
  <% end %>
</td>
<td>
	<%= link_to book_path(book.id) do %>
		<%= book.title %>
	<% end %>
</td>
<td><%= book.body %></td>
<div class="favorite_<%= @book.id %>">
  <% if book.favorited_by?(current_user) %>
  <td>
    <%= link_to book_favorites_path(book, redirect_id: 0), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= book.favorites.count %>
    <% end %>
  </td>
  <% else %>
  <td>
    <%= link_to book_favorites_path(book, redirect_id: 0), method: :post, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: gray;"></i>
      <%= book.favorites.count %>
    <% end %>
  </td>
  <% end %>
</div>
<td>
  <div class="comment-count">コメント数：<%= book.book_comments.count %></div>
</td>