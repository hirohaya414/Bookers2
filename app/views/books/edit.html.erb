<div class="body">
  <div class="container">
    <p id="notice"></p>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1>Editing Book</h1>

          <% if @book.errors.any? %>
          <div id="error_explanation" class="alert aleart-danger">
            <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>


          <%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
              <h4>Title</h4><br>
              <%= f.text_field :title %>

          <div class="field row">
            <h4>Opinion</h4>
            <textarea class="col-xs-12 book_body"><%= f.text_area :body %></textarea>
          </div>

          <div class="actions row">
              <%= f.submit 'Update Book' %>

          <% end %>
          </div>

          <%= link_to "Show", book_path(@book.id) %> |
          <a class="back" href="/books">Back</a>
        </div>
      </div>
  </div>
</div>