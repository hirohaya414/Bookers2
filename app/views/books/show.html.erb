<div class="body">
    <div class="container">
      <p id="notice"></p>
        <div class="row">
          <div class="col-xs-3">

          <%= render 'users/side', user: current_user, book: Book.new %>

          </div>
            <div class="col-xs-9">
            <h2>Book detail</h2>
              <table class="table table-hover table-inverse">
                <tbody>
                    <tr>
                      <td><%= attachment_image_tag @user, :profile_image, size: "100x100", class: "img-rounded pull-left" %></td>
                      <td><%= @book.title %></td>
                      <td><%= @book.body %></td>
                      <td><%= link_to "Edit", edit_book_path %></td>
                      <td><%= link_to "Destroy", book_path, method: :delete %></td>
                    </tr>
                </tbody>
              </table>
            </div>

        </div>
    </div>
  </div>