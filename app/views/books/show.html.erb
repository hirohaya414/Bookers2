<div class="body">
    <div class="container">
      <p id="notice"></p>
        <div class="row">
          <div class="col-xs-3">

          <% if flash[:notice] %>
            <div class="flash">
              <%= flash[:notice] %>
            </div>
          <% end %>

            <h2>User info</h2>
            <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">
            <table class="table">
              <tbody>
                  <tr>
                    <th></th>
                  </tr>
                  <tr>
                    <th>name</th>
                    <th><%= current_user.name %></th>
                  </tr>
                  <tr>
                    <th>introduction</th>
                    <th><%= current_user.introduction %></th>
                  </tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to "編集ボタン" %>
            </div>

            <h2>New book</h2>

              <div class="field row">
              <%= form_for(@new_book) do |f| %>

                <h4>Title</h4>
                <%= f.text_field :title %>

              </div>
              <div class="field row">
                <h4>Opinion</h4>
                <%= f.text_area :body %>

              </div>
              <div class="actions row">
                <%= f.submit 'Create Book' %>
              <% end %>
              </div>

          </div>
            <div class="col-xs-9">
            <h2>Book detail</h2>
              <table class="table table-hover table-inverse">
                <tbody>
                    <tr>
                      <td></td>
                      <td><%= @book.title %></td>
                      <td><%= @book.body %></td>
                      <td><%= link_to "Edit", edit_book_path %></td>
                      <td></td>
                    </tr>
                </tbody>
              </table>
            </div>

        </div>
    </div>
  </div>