<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">

      <%= render 'users/side', user: current_user, book: Book.new %>

      </div>
      <div class="col-xs-9">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
              <tr>
                <td><%= link_to user_path(@book.user) do %>
                      <%= attachment_image_tag @user, :profile_image, size: "50x50", class: "img-rounded pull-left", fallback: "no_image.jpg" %><br><%= @book.user.name %>
                    <% end %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <% if @book.favorited_by?(current_user) %>
                  <td>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                      <%= @book.favorites.count %>
                    <% end %>
                  </td>
                  <% else %>
                  <td>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      <i class="fa fa-heart" aria-hidden="true" style="color: gray;"></i>
                      <%= @book.favorites.count %>
                    <% end %>
                  </td>
                <% end %>
                <!-- <td>コメント数</td> -->
                <% if @book.user_id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path %></td>
                  <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>