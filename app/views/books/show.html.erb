<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">

      <%= render 'users/side', user: current_user, book: Book.new %>

      </div>
      <div class="col-xs-9">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr class="book_<%= @book.id %>">
              <%= render 'detail', book: @book %>
            </tr>
          </tbody>
        </table>
        <table>
          <tbody class="comment_<%= @book.id %>">
            <%= render 'comment', book_comments: @book.book_comments %>
          </tbody>
        </table><br>
        <%= form_with mehod: :post, model:[@book, @book_comment], data: {remote: true} do |f| %>
          <div class="row">
            <div class="col-sm-12">
              <%= f.text_area :comment, rows:'5', class: "form-control", placeholder: "コメントをここに" %>
            </div>
          </div>
          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>